---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import { Content as Intro } from "../content/home/intro.md";
import { Content as JoinUs } from "../content/home/joinus.md";
import { Content as WeHope } from "../content/home/wehope.md";
---

<Layout title="Welcome to Astro.">
    <Header activated_tab="home" />
    <main class="bg-primary px-36 flex flex-col justify-center">
        <article class="min-w-full flex flex-col justify-center">
            <section id="intro"
                class="prose prose-p:my-5 text-white text-lg min-w-full px-3"
            >
                    <Intro />
                <!-- <Image class="max-w-sm" src={bmimg} alt={"museum"} /> -->
            </section>

            <section class="prose prose-p:my-5 text-white text-lg min-w-full px-3">
                <JoinUs />
            </section>
            <section class="prose prose-p:my-5 text-white text-lg min-w-full px-3">
                <WeHope />
            </section>
        </article>
        <article id="agenda" class="my-10 text-white">
            <h1 class="text-3xl font-bold my-5 mb-10">Agenda</h1>
