---
import { Image } from "astro:assets";
import avatarPlaceholder from "../images/avatar-placeholder.svg";

interface Props {
    name: string;
    from: string;
    img?: any;
}
const props: Props = Astro.props;
---

<li class="card shadow-lg w-52 bg-primary">
    <Image
        class=" rounded-lg"
        src={props.img || avatarPlaceholder}
        alt={props.name}
        width={208}
        height={208}
        style={{ objectFit: "cover", height: "13rem", width: "13rem"}}
    />
    <div class="card-body">
        <h2 class="card-title">
            {props.name}
        </h2>
        <p class="text-lg">{props.from}</p>
    </div>
</li>
