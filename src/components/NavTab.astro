---
interface Props {
    name: string;
    key: string;
    activated: boolean;
    href: string;
}
const props: Props = Astro.props;
---

<li class="me-4">
    <a
        href={props.href}
        class={`text-white text-xl font-bold ${
            props.activated ? "border-b-2 border-white" : ""
        } transition ease-in-out duration-300 hover:border-b-2 hover:border-white hover:text-2xl`}
    >
        {props.name}
    </a>
</li>
